{
  "compilerOptions": {
     "lib": [
        "es6",
     ],
     "target": "ES2021",
     "module": "commonjs",
     "moduleResolution": "node",
     "outDir": "dist",
     "resolveJsonModule": true,
     "emitDecoratorMetadata": true,
     "esModuleInterop": true,
     "experimentalDecorators": true,
     "sourceMap": true
  },
  "ts-node": {
   "esm": false
  },
  "include": ["*.ts"],
}
